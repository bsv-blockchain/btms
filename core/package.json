{
  "name": "@bsv/btms",
  "version": "1.0.0",
  "type": "module",
  "description": "Basic Token Management System - UTXO-based token management for BSV",
  "module": "dist/esm/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE.txt"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/esm/src/index.js"
    }
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "ts-standard --fix src/**/*.ts",
    "build": "tsc -b",
    "prepublishOnly": "npm run build",
    "doc": "ts2md --inputFilename=src/index.ts --outputFilename=API.md --filenameSubstring=API --firstHeadingLevel=1"
  },
  "keywords": [
    "bsv",
    "bitcoin",
    "tokens",
    "btms",
    "overlay",
    "pushdrop"
  ],
  "author": "BSV Blockchain Association",
  "license": "SEE LICENSE IN LICENSE.txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/bsv-blockchain/btms"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-standard": "^12.0.2",
    "ts2md": "^0.2.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@bsv/sdk": "^2.0.3"
  }
}
