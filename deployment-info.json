{
  "schema": "bsv-app",
  "schemaVersion": "1.0",
  "topicManagers": {
    "tm_btms": "./backend/src/topic-managers/BTMSTopicManager.ts"
  },
  "lookupServices": {
    "ls_btms": {
      "serviceFactory": "./backend/src/lookup-services/BTMSLookupServiceFactory.ts",
      "hydrateWith": "mongo"
    }
  },
  "frontend": {
    "language": "react",
    "sourceDirectory": "./frontend",
    "devServerUrl": "http://localhost:8093"
  },
  "configs": [
    {
      "name": "Local LARS",
      "network": "mainnet",
      "provider": "LARS",
      "run": ["backend"]
    },
    {
      "name": "BTMS",
      "provider": "CARS",
      "CARSCloudURL": "https://cars.babbage.systems",
      "projectID": "",
      "network": "mainnet",
      "deploy": ["frontend", "backend"],
      "frontendHostingMethod": "HTTPS"
    }
  ]
}
